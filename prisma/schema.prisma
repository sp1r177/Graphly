// Схема для Supabase PostgreSQL
// Используйте эту схему для продакшена

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  email            String   @unique
  password         String
  name             String?
  subscriptionStatus String  @default("FREE") // FREE, PRO, ULTRA
  usageCountDay    Int      @default(0)
  usageCountMonth  Int      @default(0)
  lastGenerationDate DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  generations      Generation[]
  payments         Payment[]
  
  @@map("users")
}

model Generation {
  id              String   @id @default(cuid())
  userId          String
  prompt          String
  outputText      String?
  outputImageUrl  String?
  templateType    String   // VK_POST, TELEGRAM_POST, EMAIL_CAMPAIGN, BLOG_ARTICLE, VIDEO_SCRIPT, IMAGE_GENERATION
  timestamp       DateTime @default(now())
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("generations")
}

model Payment {
  id              String   @id @default(cuid())
  userId          String
  amount          Float
  currency        String   @default("RUB")
  status          String   @default("PENDING") // PENDING, COMPLETED, FAILED, CANCELLED
  yandexPaymentId String?
  subscriptionType String  // FREE, PRO, ULTRA
  timestamp       DateTime @default(now())
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("payments")
}